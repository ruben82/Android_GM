<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:layout_margin="10dp"
        >
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="GM Application"
            />
    <Button android:text="Get Authorization Token" android:onClick="getToken"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/token"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>

    <LinearLayout android:id="@+id/vehicleLayout"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:visibility="gone">
        <Button android:text="Get Vehicles Token" android:onClick="getVehicles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <ListView android:id="@+id/vehicleList"
                  android:layout_margin="5dp"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>

